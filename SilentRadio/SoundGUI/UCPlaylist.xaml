<UserControl x:Class="SilentRadio.SoundGUI.UCPlaylist"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SilentRadio.SoundGUI"
             mc:Ignorable="d" >
    <DockPanel Background="#1E1E1E">
        <DockPanel DockPanel.Dock="Top" Background="#1E1E1E" >


            <!-- Playlist Image -->
            <Image x:Name="PlaylistImage" DockPanel.Dock="Left" Width="70" Height="70" Margin="5"/>
            <!-- Playlist Title -->
            <TextBlock x:Name="PlaylistName" Text="Now Playing: Unknown" Foreground="White" DockPanel.Dock="Top" Margin="5"/>

            <!-- Playlist Description -->
            <TextBlock x:Name="Description" Text="Description: Unknown" Foreground="White" DockPanel.Dock="Top" Margin="5"/>
        </DockPanel>
        <ListBox x:Name="songListBox" Background="#2E2E2E" Foreground="White" Margin="10" SelectionChanged="SongListBox_SelectionChanged"/>
    </DockPanel>
</UserControl>
