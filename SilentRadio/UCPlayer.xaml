<UserControl x:Class="SilentRadio.UCPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SilentRadio"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <DockPanel Background="#1E1E1E">
        <!-- Song Title -->
        <TextBlock x:Name="songTitle" Text="Now Playing: Unknown" Foreground="White" DockPanel.Dock="Top" Margin="5"/>

        <!-- Progress Bar -->
        <ProgressBar x:Name="progressBar" DockPanel.Dock="Top" Height="20" Margin="5"/>

        <!-- Control Buttons -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="  &lt;  " Margin="5"/>
            <Button x:Name="playPauseButton" Content=" Play " Margin="5" Click="playPauseButton_Click"/>
            <Button Content="  &gt;  " Margin="5"/>
        </StackPanel>
    </DockPanel>
</UserControl>
