        <!--    <Button Content="Stop" Margin="5"/> -->
        <!--</StackPanel> -->

        <local:UCPlayer x:Name="ucPlayer" DockPanel.Dock="Bottom" Margin="10" />


        <!-- Song List -->
        <ListBox Name="songListBox" Background="#2E2E2E" Foreground="White" Margin="10" SelectionChanged="SongListBox_SelectionChanged"/>
    </DockPanel>
</Window>
